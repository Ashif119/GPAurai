<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassward"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_Change Password_"
        android:textColor="#E64F4F50"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:typeface="serif"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:src="@drawable/changepswd"
        app:civ_border_color="#f556"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp" />

    <EditText
        android:id="@+id/oldpswd"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:background="@drawable/box"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_old_keys_svgrepo_com"
        android:drawablePadding="10dp"
        android:hint="Old Password"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/newpswd"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:background="@drawable/box"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="10dp"
        android:hint="New Password"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/confirmpswd"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:background="@drawable/box"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="10dp"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnchangepswd"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/rotate"
        android:text="Login"
        android:textColor="#fff"
        android:textStyle="bold" />

</LinearLayout>